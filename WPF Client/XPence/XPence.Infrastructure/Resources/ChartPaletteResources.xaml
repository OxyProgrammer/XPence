<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:chart="clr-namespace:De.TorstenMandelkow.MetroChart;assembly=De.TorstenMandelkow.MetroChart">

    <SolidColorBrush x:Key="PieSelectionBrush" Color="{DynamicResource HighlightColor}"/>

    <chart:ResourceDictionaryCollection x:Key="ChartPalette">
        <ResourceDictionary>
            <SolidColorBrush x:Key="Brush1" Color="{DynamicResource AccentColor}" />
        </ResourceDictionary>
        <ResourceDictionary>
            <SolidColorBrush x:Key="Brush2" Color="{DynamicResource AccentColor2}" />
        </ResourceDictionary>
    </chart:ResourceDictionaryCollection>

</ResourceDictionary>
